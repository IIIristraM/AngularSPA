@{
    PageData["title"] = "AngularJS SPA | Sign In";
}
<div class="row">
    <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="login(userName, password)">
        <h2 class="text-center">Sign In</h2>
        <div class="form-box">
            <div class="form-group" ng-repeat="provider in providers">
                <button class="btn btn-primary btn-block" type="submit" ng-click="provider.login()" ng-disabled="!loginsReady">{{provider.providerName}}</button>
            </div>
        </div>
    </form>
</div>